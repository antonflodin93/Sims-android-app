<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/floorplanLinearLayout"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#000000"
        android:id="@+id/headerLayout"
        android:layout_weight="0.2">


        <ImageButton
            android:id="@+id/warningMessageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regularMessageBtn"
            android:layout_alignParentStart="true"
            android:background="#000000"
            android:src="@drawable/warningmessage" />

        <ImageButton
            android:id="@+id/regularMessageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:src="@drawable/regularmessage" />
    </RelativeLayout>




</LinearLayout>