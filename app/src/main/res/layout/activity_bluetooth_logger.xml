<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.miun.android_app.testing.BluetoothLogger">

    <Button
        android:id="@+id/bleOnOffButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ble_on_off"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/bleScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ble_scan"
        app:layout_constraintRight_toLeftOf="@+id/bleOnOffButton"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
</android.support.constraint.ConstraintLayout>
