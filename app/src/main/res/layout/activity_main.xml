<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777777"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/rangeTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/testCoordinateSystemBtn"
        android:background="#222222"
        android:text="Range Test"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/testCoordinateSystemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:text="Coordinate System Test"
        android:layout_below="@+id/rangeTestBtn"
        android:background="#222222"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/ontouchTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/imageTestBtn"
        android:layout_alignBottom="@+id/imageTestBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="#222222"
        android:text="OnTouch Test"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/imageTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/testCoordinateSystemBtn"
        android:layout_alignStart="@+id/ontouchTestBtn"

        android:background="#222222"
        android:text="image Test"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bluetoothLoggerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ontouchTestBtn"
        android:layout_below="@+id/testCoordinateSystemBtn"
        android:background="#222222"
        android:textColor="@android:color/white"
        android:layout_marginTop="101dp"
        android:text="@string/bluetooth_logger" />

    <Button
        android:id="@+id/responseTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bluetoothLoggerButton"
        android:layout_marginStart="54dp"
        android:background="#222222"
        android:textColor="@android:color/white"
        android:text="Test Response time" />


</RelativeLayout>
