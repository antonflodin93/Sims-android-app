<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    tools:context = ".CreateAccountActivity">


    <TextView android:text = "Create Account"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/loginTextView"
        android:textSize = "35dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/loginTextView">

        <EditText
            android:id = "@+id/userNameEditText"
            android:hint = "Enter username"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#af898e"
            android:layout_marginTop = "20dp"
            android:maxLines="1"
            android:inputType="text"/>

        <EditText
            android:id = "@+id/emailEditText"
            android:hint = "Enter email"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#af898e"
            android:layout_marginTop = "10dp"
            android:maxLines="1"
            android:inputType="text"/>

        <EditText
            android:id = "@+id/passwordEditText"
            android:hint = "Enter password"
            android:inputType="textPassword"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#af898e"
            android:layout_marginTop = "10dp"
            android:maxLines="1" />

        <EditText
            android:id = "@+id/reEnterPasswordEditText"
            android:hint = "Reenter password"
            android:inputType="textPassword"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#af898e"
            android:layout_marginTop = "10dp"
            android:maxLines="1" />

        <EditText
            android:id = "@+id/phoneNumberEditText"
            android:hint = "Phone number (0701234567)"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#af898e"
            android:layout_marginTop = "10dp"
            android:maxLines="1"
            android:inputType="text"/>

        <EditText
            android:id = "@+id/companyNameEditText"
            android:hint = "Company"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#af898e"
            android:layout_marginTop = "10dp"
            android:maxLines="1"
            android:inputType="text"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyNameEditText">

            <Button
                android:id="@+id/cancelToLogin"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="Cancel"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/createNewAccount"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="Create Account"
                android:layout_weight="1.0" />

        </LinearLayout>

    </LinearLayout>
